/* miniprogram/pages/show/show.wxss */
.container,
swiper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}
.music {
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
.pauseMusic {
  animation-play-state: paused;
  -webkit-animation-play-state: paused; /* Safari å’Œ Chrome */
}
.num {
  width: 50rpx;
  height: 50rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
  background: #ccc;
  border-radius: 50%;
  position: fixed;
  right: 30rpx;
  bottom: 20rpx;
}

.dome {
  width: 300rpx;
  height: 300rpx;
  line-height: 300rpx;
  color: #FFFFFF;
  text-align: center;
  margin: 10rpx auto;
  background-color: red;
}
.dome2 {
  background: green;
}
.van-enter-active-class,
.van-leave-active-class {
  transition-property: transform;
}

.van-enter-class,
.van-leave-to-class {
  transform: rotate(-360deg) translate3d(-100%, -100%, 0);
}