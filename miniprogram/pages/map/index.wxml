<!--miniprogram/pages/map/index.wxml-->
<map 
  id="map"
  longitude="{{longitude}}"
  latitude="{{latitude}}"
  scale="{{scale}}"
  markers="{{markers}}"
  bindmarkertap="markertap"
  polyline="{{polyline}}"
  show-location
  style="width: 100%; height: 300px;"
/>
<van-cell-group class="main">
  <van-field
    value="{{ startPositionText }}"
    center
    clearable
    label=""
    placeholder="请输入出发地"
    border="{{ false }}"
    bind:blur="getStartPosition"
    custom-style="ipt"
  />-
  <van-field
    value="{{ endPosition }}"
    center
    clearable
    label=""
    placeholder="请输入目的地"
    border="{{ false }}"
    bind:blur="getEndPosition"
    custom-style="ipt"
  />
  <van-button slot="button" size="small" type="primary" bind:tap="sure">确定</van-button>
</van-cell-group>
<block wx:if="{{isLine}}">
  <van-tabs animated bind:change="onChange">
    <van-tab title="驾车">内容 1</van-tab>
    <van-tab title="公交">内容 2</van-tab>
    <van-tab title="骑行">内容 3</van-tab>
    <van-tab title="步行">内容 4</van-tab>
  </van-tabs>
</block>