<!--miniprogram/pages/map/index.wxml-->
<map 
  id="map"
  longitude="{{longitude}}"
  latitude="{{latitude}}"
  scale="{{scale}}"
  markers="{{markers}}"
  bindmarkertap="markertap"
  polyline="{{polyline}}"
  bindregionchange="regionchange"
  show-location
  style="width: 100%; height: 300px;"
/>
<van-cell-group>
  <van-field
    value="{{ destination }}"
    center
    clearable
    label=""
    placeholder="请输入目的地"
    border="{{ false }}"
    bind:blur="getDestination"
    use-button-slot
  >
    <van-button slot="button" size="small" type="primary" bind:tap="analysis">确定</van-button>
  </van-field>
</van-cell-group>
